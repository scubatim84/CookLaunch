{
  "testEnvironment": "node",
  "roots": ["./__tests__/"],
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "statements": 90,
      "branches": 90,
      "functions": 90,
      "lines": 90
    }
  },
  "collectCoverageFrom": [
    "<rootDir>/**/*.js",
    "!<rootDir>/client/**",
    "!<rootDir>/node_modules"
  ],
  "moduleFileExtensions": ["js", "json"],
  "modulePathIgnorePatterns": ["client"]
}
