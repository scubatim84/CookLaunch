{
  "name": "cook-launch",
  "type": "module",
  "version": "1.0.0",
  "engines": {
    "node": "13.x"
  },
  "description": "Full stack web application to simplify cooking",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "pretest": "./node_modules/.bin/eslint --fix .",
    "test": "npm run test-server && npm run test-client",
    "test-server": "mocha --es-module-specifier-resolution=node __tests__/**/*.js",
    "test-client": "cd client && npm run test-ci",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install && cd client && npm install && npm run build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/date-fns": "^2.6.0",
    "aws-sdk": "^2.756.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "file-type": "^15.0.1",
    "fs": "0.0.1-security",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": ">=5.11.5",
    "multiparty": "^4.2.2",
    "nodemailer": "^6.4.10",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^13.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "chai": "^4.3.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "./node_modules/.bin/eslint --fix"
    ]
  }
}