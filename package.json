{
  "name": "mern-auth",
  "version": "1.0.0",
  "description": "Mern Auth Example",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "test": "npm test --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "compile-tsc": "rimraf ./build && tsc --build tsconfig.json",
    "build": "npm run compile-tsc && cd client/ && npm install && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.3.0",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.3",
    "nodemailer": "^6.4.10",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "prettier": "^2.1.1",
    "validator": "^13.1.0"
  },
  "lint-staged": {
    "./**/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.10.3",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
